<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane fx:id="ap_root" minHeight="200.0" minWidth="300.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.centoreluca.controller.dialog.CDialog">
    <BorderPane prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
        </padding>
        <top>
            <Label fx:id="l_d_title" text="template" BorderPane.alignment="CENTER">
            <font>
               <Font name="System Bold" size="14.0" />
            </font></Label>
        </top>
        <center>
            <Label fx:id="l_d_description" text="template" wrapText="true" BorderPane.alignment="CENTER" />
        </center>
        <bottom>
            <FlowPane fx:id="fp_buttons" alignment="CENTER" hgap="50.0" BorderPane.alignment="CENTER">
                <Button fx:id="b_d_close" onAction="#chiudi" text="OK" />
            </FlowPane>
        </bottom>
    </BorderPane>
</AnchorPane>
